doctype html
html
  head
    meta(charset='utf-8')
    title FoM Demo App

    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css' rel='stylesheet')
    link(href='./style.css' rel='stylesheet')

  body.fade
    .container#weight
      h1 Weight Analysis
      h5.grey-text for John Doe - Male, 180cm
      .row
        .col.s12
          ul.tabs#wtimes
            li.tab.col.s2.offset-s1: a MONTH
            li.tab.col.s2: a WEEK 1
            li.tab.col.s2: a WEEK 2
            li.tab.col.s2: a WEEK 3
            li.tab.col.s2: a WEEK 4
        .col.s6
          .card: .card-content
            canvas#weightc
        .col.s6
          .card: .card-content
            h4 You #[span.summary] throughout #[span.range].
            br
            ul.collapsible
              li
                .collapsible-header: h5 Details
                .collapsible-body
                  p #[strong Goal Weight Range]: 65 - 81 kg
                  p #[strong Starting Weight]: #[span.start] kg
                  p #[strong Ending Weight]: #[span.end] kg
                  p #[strong Min Weight]: #[span.min] kg
                  p #[strong Max Weight]: #[span.max] kg
                  p #[strong Avg Weight]: #[span.avg] kg
                  p #[strong Net Change]: #[span.netch] kg
                  p #[strong Avg Change]: #[span.roc] kg/day
              li
                .collapsible-header: h5 Recommendations
                .collapsible-body
                  ul.collection.wrecs

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
    script(src='./main.js')
