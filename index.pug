doctype html
html
  head
    meta(charset='utf-8')
    title FoM Demo App

    link(href='https://fonts.googleapis.com/icon?family=Material+Icons' rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css' rel='stylesheet')
    link(href='./style.css' rel='stylesheet')

  body.fade
    .container#diet
      h1 Diet Analysis
      h5.grey-text #[i.material-icons face] John Doe - Male, 27yo, 180cm
      a.btn.waves-effect.prev &lt;
      a.dropdown-trigger.btn.waves-effect(data-target='dtimes') Select Time
      a.btn.waves-effect.next &gt;
      .row
        .col.s12
          ul.dropdown-content#dtimes
            li: a MONTH
            each x, i in Array(30)
              li: a= 'DAY ' + (i + 1)
        .col.s6
          .card: .card-content
            canvas#dietc
        .col.s6
          .card: .card-content
            h4 #[span.time]
            br
            .row
              ul.tabs
                li.tab.cols.s6: a.active(href='#stats') Statistics
                li.tab.cols.s6: a(href='#inds') Indicators
              br
              .col.s12#stats
                p #[strong Ideal Daily Caloric Intake:] 2000 - 2500 kcal
                p #[strong Total Caloric Intake:] #[span.total] kcal
                p #[strong Total Caloric Intake per Food Group:]
                  table
                    thead
                      tr
                        th Type
                        th kcal
                        th %
                    tbody.groups
              .col.s12#inds
                ul.collection.indics

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/npm/chart.js@2.9.3/dist/Chart.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')
    script(src='./main.js')
